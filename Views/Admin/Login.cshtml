@model CStore.Models.LoginModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Авторизация";
}

<h1 class="col-12">Вход</h1>

<form class="col-8" asp-action="Login" asp-controller="Admin" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="mb-3">
            <label asp-for="Login">Введите логин</label>
            <input class="form-control" type="text" asp-for="Login" />
            <span asp-validation-for="Login" />
        </div>
        <div class="mb-3">
            <label asp-for="Password">Введите пароль</label>
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Вход" class="btn btn-outline-dark" />
        </div>
    </div>
</form>


@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}